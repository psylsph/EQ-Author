# EQ-Author Configuration
# Copy this file to .env and fill in your values

# Writing parameters
EQ_AUTHOR_N_CHAPTERS=12
EQ_AUTHOR_TEMPERATURE=1.0

# API configuration
EQ_AUTHOR_API_KEY=your-api-key-here
EQ_AUTHOR_BASE_URL=https://api.deepseek.com
EQ_AUTHOR_MODEL=deepseek-reasoner

# Output settings
EQ_AUTHOR_OUTPUT_DIR=outputs
EQ_AUTHOR_CACHE_DIR=.prompt_cache

# Context management
EQ_AUTHOR_CONTEXT_STRATEGY=aggressive
EQ_AUTHOR_SUMMARY_LENGTH=250
EQ_AUTHOR_RECENT_CHAPTERS=2
EQ_AUTHOR_MAX_CONTEXT_TOKENS=

# Boolean flags (set to true, 1, or yes to enable)
EQ_AUTHOR_NO_STREAM=false
EQ_AUTHOR_NON_INTERACTIVE=false
EQ_AUTHOR_NO_CACHE=false
EQ_AUTHOR_UNLIMITED_CONTEXT=false

# Resume from previous run
# EQ_AUTHOR_RESUME_FROM=/path/to/previous/output/directory

# Automatically generate chapters without prompting for feedback
# EQ_AUTHOR_ALWAYS_AUTOGEN_CHAPTERS=false
